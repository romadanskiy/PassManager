@model PasswordManager.ViewModels.CreateSubscriptionViewModel
@{
    ViewBag.Title = "Создание подписки";
}
<form method="post" asp-action="Create" asp-controller="Subscriptions">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена в рублях</label>
        <input type="number" min="1" max="999999" step="0.01" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>