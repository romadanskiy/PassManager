@model PasswordManager.ViewModels.EditSubscriptionViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form method="post" asp-action="Edit" asp-controller="Subscriptions">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена в рублях</label>
        <input name="Price" type="number" min="1" max="999999" step="0.01" value="@Model.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>