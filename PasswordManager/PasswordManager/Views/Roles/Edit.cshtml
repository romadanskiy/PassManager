@using Microsoft.AspNetCore.Identity
@model PasswordManager.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "Изменение ролей пользователя";
}
 
<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<a asp-controller="Roles" asp-action="Index">Список ролей</a>
 
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>