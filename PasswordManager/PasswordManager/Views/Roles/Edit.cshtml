@model PasswordManager.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "Изменение ролей пользователя";
}
 
<h1>Изменение ролей для пользователя @Model.UserEmail</h1>

<a class="btn btn-outline-secondary btn-sm mt-2 mb-3" asp-controller="Roles" asp-action="Index">Список ролей</a>
 
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    @foreach (var role in Model.AllRoles)
    {
        <div class="form-check">
            <input id="@role.Id" class="form-check-input" type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
            <label for="@role.Id" class="form-check-label">@role.Name</label>
        </div>
    }
    <button type="submit" class="btn btn-primary mt-1">Сохранить</button>
</form>