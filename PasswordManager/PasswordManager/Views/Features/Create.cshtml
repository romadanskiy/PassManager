@model PasswordManager.ViewModels.CreateFeatureViewModel
@{
    ViewBag.Title = "Добавление фичи";
}
<form asp-action="Create" asp-controller="Features">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ControllerName" class="control-label">Название контроллера</label>
        <input type="text" asp-for="ControllerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>