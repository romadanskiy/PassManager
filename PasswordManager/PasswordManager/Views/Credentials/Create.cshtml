@model PasswordManager.ViewModels.CreateCredentialViewModel
@{
    ViewBag.Title = "Добавление пароля";
}

<form method="post" asp-action="Create" asp-controller="Credentials">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Source" class="control-label">URL, название сайта или любая удобная пометка</label>
        <input type="text" asp-for="Source" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Login" class="control-label">Почта или логин</label>
        <input type="text" asp-for="Login" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="password" asp-for="Password" class="form-control"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary"/>
    </div>
</form>
