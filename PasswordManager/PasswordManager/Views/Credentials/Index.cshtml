@model List<Credential>
@{
    ViewBag.Title = "Мои пароли";
}

<h2>Сохранённые пароли</h2>

<a asp-action="Create">Добавить пароль</a>

@if (Model == null || Model.Count < 1)
{
    <h5>У вас ещё нет сохранённых паролей</h5>
}
else
{
    <table class="table">
        <tr>
            <th>Источник</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Action</th>
        </tr>
        @foreach (var credential in Model)
        {
            <tr>
                <td>@credential.Source</td>
                <td>@credential.Login</td>
                <td class="credential-password-click">
                    <input class="credential-password" type="password" value="@credential.Password" disabled="disabled">
                </td>
                <td>
                    Удалить
                </td>
            </tr>
        }
    </table>
}

@section Scripts
{
    <script src="js/credentialPassword.js"></script>
}